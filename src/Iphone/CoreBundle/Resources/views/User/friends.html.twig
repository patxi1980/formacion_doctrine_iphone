{% extends '::base.html.twig' %}
{% block title %}Friends by user{% endblock %}
{% block body %}
    <div class="row">
        <div class="large-12 columns">
            <h1>User: {{ user.username }}  (email: {{ user.email }})</h1>
        </div>
    </div>
    <div class="row">
        <div class="large-12 columns">
            <h2>List of friends</h2>
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                {% for friend in user.friends %}
                    <tr>
                        <td>{{ friend.id }}</td>
                        <td>{{ friend.username }}</td>
                        <td>{{ friend.email }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
